<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="snake.snake" >
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="views.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="views.GameActivity">
            <intent-filter>
                <action android:name="android.intent.action.GAME" />
            </intent-filter>
        </activity>

        <activity android:name="views.SettingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.SETTINGS"/>
            </intent-filter>
        </activity>

        <activity android:name="views.TutorialActivity">
            <intent-filter>
                <action android:name="android.intent.action.TUTORIAL"/>
            </intent-filter>
        </activity>

        <activity android:name="views.ScoresActivity">
            <intent-filter>
                <action android:name="android.intent.action.SCORES"/>
            </intent-filter>
        </activity>

    </application>
</manifest>